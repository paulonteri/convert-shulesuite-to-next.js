{
    "name": "shulesuite-app",
    "version": "0.1.0",
    "description": "ShuleSuite Web App",
    "private": true,
    "scripts": {
        "dev": "next",
        "build": "yarn && yarn next build && yarn next export",
        "start": "next start",
        "cypress:open": "cypress open",
        "test": "yarn cypress:run",
        "cypress:run": "cypress run --headless --browser chrome",
        "test-firebase": "yarn && yarn next build && yarn next export && firebase serve",
        "deploy": "firebase deploy",
        "analyze": "cross-env ANALYZE=true next build"
    },
    "dependencies": {
        "@next/bundle-analyzer": "^10.0.5",
        "antd": "^4.11.2",
        "axios": "^0.21.1",
        "axios-cache-adapter": "^2.5.0",
        "bootstrap": "^4.6.0",
        "chart.js": "^2.9.4",
        "moment": "^2.29.1",
        "next": "latest",
        "next-pwa": "^5.0.4",
        "nprogress": "^0.2.0",
        "react": "^16.9.0",
        "react-alert": "^7.0.2",
        "react-alert-template-basic": "^1.0.0",
        "react-chartjs-2": "^2.11.1",
        "react-dom": "^16.9.0",
        "react-highlight-words": "^0.17.0",
        "react-loader-spinner": "^3.1.14",
        "react-redux": "^7.1.0",
        "redux": "^4.0.4",
        "redux-devtools-extension": "^2.13.8",
        "redux-thunk": "^2.3.0"
    },
    "devDependencies": {
        "cross-env": "^7.0.3",
        "cypress": "^6.3.0",
        "firebase": "^8.2.5",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "redux-logger": "^3.0.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "git add"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "license": "MIT"
}
